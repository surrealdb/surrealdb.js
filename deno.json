{
	"lint": {
		"include": ["src/", "./mod.ts", "./compile.ts", "./deno.json"]
	},
	"fmt": {
		"include": ["src/", "./mod.ts", "./compile.ts", "./deno.json"],
		"options": {
			"useTabs": true,
			"lineWidth": 80,
			"indentWidth": 4,
			"singleQuote": false
		}
	},
	"tasks": {
		"build": "deno run -A ./compile.ts && cd npm && npm run build:web"
	},
	"test": {
		"include": ["tests/integration/ws.ts", "tests/integration/http.ts"]
	}
}
