{
    "$schema": "https://turborepo.org/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "target/**", "wasm/**"]
        },
        "run-tests": {
            "dependsOn": ["^build"]
        },
        "sync": {
            "cache": false
        },
        "foo": {
            "cache": false
        },
        "dev": {
            "cache": false
        },
        "publish": {
            "dependsOn": ["^publish"],
            "cache": false
        }
    }
}
